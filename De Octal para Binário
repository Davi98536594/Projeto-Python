uni_1 = int(unidade / 2 ) 
uni_2 = int(unidade % 2) 
uni_3 = int(uni_1 /2) 
uni_4 = int(uni_1 % 2) 
uni_5 = int(uni_3 /2) 
uni_6 = int(uni_3 %2) 

