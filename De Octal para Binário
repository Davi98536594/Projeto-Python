def octal_para_binario(octal_str):
    decimal_num = int(octal_str, 8)
    
    binario_str = bin(decimal_num)[2:]  # O [2:] remove o prefixo '0b'
    
    return binario_str

octal_str = input("Digite o número que será convertido para binário ")
binario = octal_para_binario(octal_str)
print(f"Octal: {octal_str} -> Binário: {binario}")
