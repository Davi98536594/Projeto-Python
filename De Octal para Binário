cen_2 = int(centena % 2) 
cen_3 = int(cen_1 /2) 
cen_4 = int(cen_1 % 2) 
cen_5 = int(cen_3 /2) 
cen_6 = int(cen_3 % 2)

milhar = int(input("Digite um milhar "))#testes 
mil_1 = int(milhar / 2 ) 
mil_2 = int(milhar % 2) 
mil_3 = int(mil_1 /2) 
mil_4 = int(mil_1 % 2) 
mil_5 = int(mil_3 /2) 
mil_6 = int(mil_3 % 2)

if milhar >0:
    print(f"A resposta é {mil_6}{mil_4}{mil_2}{cen_6}{cen_4}{cen_2}{dez_6}{dez_4}{dez_2}{uni_6}{uni_4}{uni_2}")
elif centena >0:
    print(f"A resposta é {cen_6}{cen_4}{cen_2}{dez_6}{dez_4}{dez_2}{uni_6}{uni_4}{uni_2}")
